<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardview_corner_radius"
            app:cardElevation="@dimen/cardview_elevation"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status bar notification"
                    android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                    android:textSize="15dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:id="@+id/hide_notification_inner"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hide Notification"
                        android:textColor="#000000"
                        android:textSize="@dimen/settings_text_size"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"

                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/switch_hide_notification_inner"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Quick settings"
                        android:textColor="#000000"
                        android:textSize="@dimen/settings_text_size"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        />


                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardview_corner_radius"
            app:cardElevation="@dimen/cardview_elevation"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter"
                    android:textSize="15dp"
                    android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:id="@+id/filter_navbar"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter translucent navbar"
                        android:textColor="#000000"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        android:textSize="@dimen/settings_text_size"

                        />

                    <Switch
                        android:id="@+id/switch_filter_navbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"

                        android:layout_marginLeft="@dimen/first_cardview_inner_elements_margin" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:id="@+id/filter_navbar_landscape"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter navbar in landscape"
                        android:textColor="#000000"
                        android:textSize="@dimen/settings_text_size"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"


                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"

                        android:id="@+id/switch_filter_navbar_landscape"
                        />


                </RelativeLayout>
