<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rdx.pirate.bluelight_filter.navActivity"
    tools:showIn="@layout/app_bar_nav">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_corner_radius"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardUseCompatPadding="true">

        <!-- put whatever you want -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/img_color_temp"
                    android:layout_width="@dimen/color_circle"
                    android:layout_height="@dimen/color_circle"
                    android:layout_marginTop="@dimen/first_cardview_inner_elements_margin"
                    android:layout_marginLeft="@dimen/first_cardview_circle_left_margin"
                    android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color Temperature"
                            android:textColor="#000000"
                            android:id="@+id/color_temp"
                            android:layout_weight="2"
                            android:textSize="@dimen/first_cardview_text"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000k"
                            android:id="@+id/value_color_temp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="@dimen/first_cardview_text"
                            />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBar_color_temp"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="5dip"
                        android:maxHeight="5dip"
                        android:progressDrawable="@drawable/progress_seekbar"
                        android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                        android:layout_marginRight="@dimen/first_cardview_inner_elements_margin"
                        android:layout_marginLeft="@dimen/first_cardview_inner_elements_margin"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/img_intensity"
                    android:layout_width="@dimen/color_circle"
                    android:layout_height="@dimen/color_circle"
                    android:layout_marginTop="@dimen/first_cardview_inner_elements_margin"
                    android:layout_marginLeft="@dimen/first_cardview_circle_left_margin"
                    android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intensity"
                            android:id="@+id/intensity"
                            android:layout_weight="2"
                            android:textColor="#000000"
                            android:textSize="@dimen/first_cardview_text"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:id="@+id/value_intensity"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="@dimen/first_cardview_text"
                            />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBar_intensity"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="5dip"
                        android:maxHeight="5dip"
                        android:progressDrawable="@drawable/progress_seekbar"
                        android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                        android:layout_marginRight="@dimen/first_cardview_inner_elements_margin"
                        android:layout_marginLeft="@dimen/first_cardview_inner_elements_margin"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/img_screen_dim"
                    android:layout_width="@dimen/color_circle"
                    android:layout_height="@dimen/color_circle"
                    android:layout_marginTop="@dimen/first_cardview_inner_elements_margin"
                    android:layout_marginLeft="@dimen/first_cardview_circle_left_margin"
                    android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Screen Dim"
                            android:id="@+id/screen_dim"
                            android:layout_weight="2"
                            android:textColor="#000000"
                            android:textSize="@dimen/first_cardview_text"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%"
                            android:id="@+id/value_screen_dim"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="@dimen/first_cardview_text"
                            />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBar_screen_dim"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="5dip"
                        android:maxHeight="5dip"
                        android:progressDrawable="@drawable/progress_seekbar"
                        android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                        android:layout_marginRight="@dimen/first_cardview_inner_elements_margin"
                        android:layout_marginLeft="@dimen/first_cardview_inner_elements_margin"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/myview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            android:textSize="50dp"

            />


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_corner_radius"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:id="@+id/pause_min"
                >

                <ImageView
                    android:layout_width="@dimen/color_circle"
                    android:layout_height="@dimen/color_circle"
                    android:layout_marginRight="@dimen/first_cardview_inner_elements_margin"
                    android:id="@+id/pause_image"
                    android:src="@drawable/ic_pause_circle_outline_black_48dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pause for 1 minute"
                    android:textSize="20dp"
                    android:id="@+id/pause_text"
                    android:textColor="#000000"
                    />

            </LinearLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/set_timer_layout"
                >
                <ImageView
                    android:layout_width="@dimen/color_circle"
                    android:layout_height="@dimen/color_circle"
                    android:id="@+id/img"
                    android:src="@drawable/ic_schedule_black_48dp"
                    android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Set Auto Timer"
                    android:textSize="15dp"
                    android:id="@+id/set_auto_timer"
                    android:layout_toRightOf="@id/img"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/img"
                    android:textColor="#068b1a"
                    android:id="@+id/timer_uptime"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/timer_uptime"
                    android:id="@+id/timer_separator"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timer_downtime"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/timer_separator"
                    android:layout_marginRight="@dimen/first_cardview_inner_elements_margin"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#a40808"

                    />


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/switch_customTimer"

                    />






            </RelativeLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_corner_radius"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/first_cardview_inner_elements_margin"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                android:text="Notification Bar"
                android:textSize="@dimen/notificationbar_text"
                android:layout_weight="8"
                android:textColor="#000000"
                android:id="@+id/notification_bar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on"
                android:textSize="@dimen/notificationbar_text"
                android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                android:id="@+id/notification_bar_value"

                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/first_cardview_inner_elements_margin"
                android:layout_marginBottom="@dimen/first_cardview_inner_elements_margin"
                android:id="@+id/notification_bar_switch"
              />


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_corner_radius"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardUseCompatPadding="true"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:id="@+id/settings_linear_latout"
            android:background="@drawable/ripple_effect"
            android:layout_margin="@dimen/first_cardview_inner_elements_margin"
            >
            <ImageView
                android:layout_width="@dimen/color_circle"
                android:layout_height="@dimen/color_circle"
                android:src="@drawable/ic_settings_black_48dp"
                android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_margin="@dimen/first_cardview_inner_elements_margin"
                android:textSize="@dimen/notificationbar_text"
                android:textColor="#000000"
                />
            
            
            
        </LinearLayout>
        
        
    </android.support.v7.widget.CardView>


</LinearLayout>

</ScrollView>
